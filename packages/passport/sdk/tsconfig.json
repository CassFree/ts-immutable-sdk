{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "rootDirs": [
      "src"
    ],
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "composite": true,
    "allowJs": false,
    "removeComments": false,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "src/types.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/modules/provider/sample-app",
    "src/modules/checkout"
  ],
  "references": [
    {
      "path": "../../config"
    },
    {
      "path": "../../internal/generated-clients"
    },
    {
      "path": "../../internal/guardian"
    },
    {
      "path": "../../immutablex_client"
    },
    {
      "path": "../../provider"
    },
    {
      "path": "../../internal/toolkit"
    }
  ]
}
