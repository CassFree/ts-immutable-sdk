{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "rootDirs": [
      "src"
    ],
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "allowJs": false,
    "removeComments": false,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": false,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "scripts",
    "dist",
  ],
  "references": [
    {
      "path": "../packages/blockchain-data/sdk"
    },
    {
      "path": "../packages/checkout/sdk"
    },
    {
      "path": "../packages/checkout/widgets"
    },
    {
      "path": "../packages/config"
    },
    {
      "path": "../packages/internal/cryptofiat"
    },
    {
      "path": "../packages/erc20"
    },
    {
      "path": "../packages/erc721"
    },
    {
      "path": "../packages/erc721-mint-by-id"
    },
    {
      "path": "../packages/internal/generated-clients"
    },
    {
      "path": "../packages/internal/guardian"
    },
    {
      "path": "../packages/immutablex_client"
    },
    {
      "path": "../packages/orderbook"
    },
    {
      "path": "../packages/passport/sdk"
    },
    {
      "path": "../packages/provider"
    }
  ]
}
